<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/norma_1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dimension_avatar_home"
                android:layout_height="@dimen/dimension_avatar_home"
                android:layout_marginRight="@dimen/norma_1" />

            <TextView
                android:id="@+id/titulo_imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo Imagen"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_imagen"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:padding="@dimen/norma_1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/norma_2"
                android:layout_marginRight="@dimen/norma_2"
                android:src="@drawable/precio_producto" />

            <TextView
                android:id="@+id/PreciosServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visualizaciones"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/iconoFavorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/norma_3"
                android:layout_marginRight="@dimen/norma_2"
                android:src="@drawable/heart"
                android:tint="@color/tinte_icono_favorito" />

            <TextView
                android:id="@+id/noLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes"
                android:textAppearance="?android:attr/textAppearanceSmall" />




        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>